{
    "manifest_version": 3,
    "name": "Sniper",
    "description": "Create robust webpage navigation shortcuts",
    "version": "0.1.0",
    "options_ui": {
        "page": "options.html"
    },
    "action": {
        "default_icon": {
            "16": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "world": "MAIN",
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/vendor.js",
                "js/content_script.main.js"
            ]
        },
        {
            "world": "ISOLATED",
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/vendor.js",
                "js/content_script.isolated.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}